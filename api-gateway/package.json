    "@nestjs/platform-socket.io": "^10.2.1",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/websockets": "^10.2.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
